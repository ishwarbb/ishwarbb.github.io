---
import SideBar from "./SideBar.astro";
import Footer from "./Footer.astro";

const {activeItemID, showSidebar} = Astro.props;
---

<div class="drawer lg:drawer-open">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <div class="flex flex-row justify-end mt-3 mx-3">
    <span class="flex flex-row items-center">
      <span class="mx-2 text-xl">ðŸŒž</span> 
      <input id="theme-toggler" data-toggle-theme="winter,dracula" data-act-class="ACTIVECLASS" type="checkbox" class="toggle" checked/>
       <span class="mx-2 text-xl">ðŸŒš</span>
    </span>
    </div>
    <div class="p-9 lg:px-20 py-10 min-h-screen">
      <slot />
    </div>
    <Footer />
  </div> 
  {showSidebar && <SideBar {activeItemID}/>}
</div>

<script>
  const isDark = (localStorage.getItem('theme') === 'dracula') || (localStorage.getItem('theme') === null);
  const themeToggler = document.getElementById("theme-toggler") as HTMLInputElement;
  themeToggler.checked = isDark;
</script>